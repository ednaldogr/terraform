{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-0f29c8402f8cce65c",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-orion {{timestamp}}"
    }
  ],

  "provisioners": [
    {
    "type": "file",
    "source": "index.nginx-debian.html",
    "destination": "/tmp/index.nginx-debian.html"
    },
    {
    "type": "shell",
    "scripts": [  "scripts/install_nginx.sh"   ],
    "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
    "pause_before": "10s"
    }
  ]
}
